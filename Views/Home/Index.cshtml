@model IEnumerable<DanskeByer.Models.City>

@{
    ViewData["Title"] = "Danske Byer";
}

<h1>Her kan du søge efter danske byer</h1>
<form asp-controller="City" asp-action="Index" method="get">
    <p>
        Søg efter navn: <input type="text" name="searchString"/>
        <input  type="submit" value="Søg"/>
    </p>
</form>

@if (Model != null && Model.Any()) 
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(Model => Model.Name)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model) 
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <table class="table">
        <thead>
            <tr>
                <th>Total befolkning fra søgning</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.Sum(c => c.Population)</td>
            </tr>
        </tbody>
    </table>
}
else
{
    <p>Ingen byer fundet.</p>
}